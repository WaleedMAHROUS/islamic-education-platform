generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id           String   @id @default(cuid())
  serviceType  String   // "Quran", "IslamicStudies", "Arabic"
  studentName  String
  studentEmail String
  message      String?
  startTime    DateTime @unique // Ensures no overlapping sessions globally
  studentTimezone String   @default("UTC") // Captured from user's browser
  preferredLanguage String @default("en") // 'en' or 'ar'
  meetingLink  String?  // Can be null if generation fails or pending
  createdAt    DateTime @default(now())
}

model Availability {
  id        Int      @id @default(autoincrement())
  startTime DateTime @unique // Specific date and hour the teacher is open
  createdAt DateTime @default(now())
}
